# Configuración de la base de datos (PHP API y otros servicios)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nombreDeTuDB
DB_USER=usuario
DB_PASS=contraseña

# Configuración para TypeORM en el servicio Auth (puede reutilizar las de arriba)
DB_USERNAME=${DB_USER}
DB_PASSWORD=${DB_PASS}

# Configuración de Redis (para servicios de autenticación)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=tuRedisPassword
SESSION_SECRET=algúnSecretoMuySeguro

# Otras variables globales
NODE_ENV=development